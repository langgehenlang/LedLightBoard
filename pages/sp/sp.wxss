/* pages/sp/sp.wxss */
page{
    position: fixed;
    height: 100%;
    width: 100%;
    display:flex;
    flex-direction:column;
}

.container{
    height: 100%;    
    width: 100%;  
    flex-direction:column;
    display:flex;
}


.menu-box{
  position:fixed;
  width:100%;
  height:100%;
  top:0px;
  background:rgba(0, 0, 0, 0.151);
  overflow: hidden;
  display:flex;
  flex-direction:column;
}

.menu-body{
  position:fixed;
  background: rgba(110, 109, 108, 0.664);
  width: 100%;
  height: auto;
  bottom: 0rpx;
  border-top-right-radius: 5rpx;
  border-top-left-radius: 5rpx;
}

.menu{
    position: relative;
    width: 100%;
    height: auto;
    overflow: hidden;
    background-color: rgba(255, 255, 255, 0);        
    padding-top: 0rpx;
    border-radius: 15rpx;    
}

.menu .item{
    float: left;
    width: 25%;
    height: 187.5rpx;
    border-right: 1px solid rgba(0,0,0,.15);
    border-bottom: 1px solid rgba(0,0,0,.15);
    text-align: center;
}

.menu .item .a{
  display: flex;
  width: 100%;
  height: 100%;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.menu .item.no-border {
    border-right: 0;
    border-bottom: 0;
}

.menu .txt{
    display: block;
    height: 28rpx;
    width: 100%;
    font-size: 28rpx;
    color:#ebe5e5e8;
}

.menu .icon{
    margin: 0 auto;
    display: block;
    height: 52.803rpx;
    width: 52.803rpx;
    margin-bottom: 16rpx;    
}

.menu .icon.back{
    src: url(../images/sp_man.png) 0 0rpx no-repeat;
    background-size: 52.803rpx;
}

.menu .icon.man{
    background: url(http://youcanyin.com/pdjh/images/help.png) 0 0rpx no-repeat;
    background-size: 52.803rpx;
}

.menu .icon.reset{
    background: url(http://youcanyin.com/pdjh/images/zanshang.png) 0 0rpx no-repeat;
    background-size: 52.803rpx;
}

.menu .icon.kuai{
    background: url(http://youcanyin.com/pdjh/images/find.png) 0 0rpx no-repeat;
    background-size: 52.803rpx;
}